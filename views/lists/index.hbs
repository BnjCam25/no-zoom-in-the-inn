



<script>
    function openForm(id) {
        document.getElementById("add-task-form" + id).style.display = "block";
    }

    function closeForm(id) {
        document.getElementById("add-task-form" + id).style.display = "none";
    }
</script>

<div id="lists">
    {{#each lists}}
    <div>
        <a href="/lists/view?list={{this._id}}">{{this.listName}}</a>
        <button class="add-task-button" onclick="openForm('{{this._id}}')">Add a Task</button>
        <div id="add-task-form{{this._id}}" class="task-form">
            <form action="/lists/tasks" method="post">
                <label for="task-name">Task</label>
                <input id="task-name" type="text" name="tasks" value="" required>
Â                <input type="hidden" id="listId" name="listId" value="{{this._id}}">
                <button id="submit-task" type="submit" onclick="closeForm('{{this._id}}')">Submit Task</button>   
            </form>
        </div>
    </div>
    {{/each}}
</div>


<a id="new-list" href="/lists/new">New List</a>

