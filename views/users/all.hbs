
<h3>All users</h3>
<h5>Number of users: {{users.length}}</h5>

<h4>Current user: {{current_user}}</h4>
<ul>
{{#each users}}
<li>{{this.first_name}} {{this.last_name}}</li>
<form action="/users/addfriend" method = "POST">
    <input type="hidden" id={{@index}} name="id" value={{this.id}}>
    <button class="friendButton" onclick="change(event)"  id={{this.id}} style= 'background-color: rgb(227, 227, 227);' type="submit">Add or Delete friend</button>
</form>

<br>
<br>

{{/each}}

</ul>

<script>
    function change(event){

        if (event.target.innerHTML === "Remove friend"){
            event.target.innerHTML = "Add friend";
        }else{
            event.target.innerHTML = "Remove friend";
        }
    }
</script>